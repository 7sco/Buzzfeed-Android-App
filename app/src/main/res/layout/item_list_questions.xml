<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    cardView:cardCornerRadius="4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/idcardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardView:cardCornerRadius="6dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/idquestion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Question Goes Here!"
                android:gravity="center"
                android:textSize="15sp"
                android:background="#ccc"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"

                >

                <RadioButton
                    android:id="@+id/idRadio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opcion 1"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    />

                <RadioButton
                    android:id="@+id/idRadio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opcion 2"
                    android:checked="false"
                    />

                <RadioButton
                    android:id="@+id/idRadio3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opcion 3"
                    android:checked="false"

                    />

                <RadioButton
                    android:id="@+id/idRadio4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opcion 4"
                    android:checked="false"
                    />

            </RadioGroup>


        </android.support.v7.widget.CardView>


    </LinearLayout>


