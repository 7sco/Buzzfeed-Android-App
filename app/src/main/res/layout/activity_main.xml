<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.example.franciscoandrade.buzzfeedquiz.MainActivity">


    <LinearLayout
        android:id="@+id/idquiz1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/firstquizz_txt"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/testone"
            android:layout_margin="10dp"
            android:layout_gravity="center"

            />

        <Button
            android:id="@+id/quizzbtn1"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:theme="@style/RaisedButtonDark"
            android:text="@string/takequizz_txt"
            android:onClick="onClick"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:id="@+id/idquiz2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/firstquizz_txt"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"

            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/testtwo"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/quizzbtn2"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:theme="@style/RaisedButtonDark"
            android:text="@string/takequizz_txt"
            android:onClick="onClick"
            />

    </LinearLayout>



</LinearLayout>
